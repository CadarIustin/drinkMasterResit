<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkBeige"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mint_small" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="55dp"
        android:baselineAligned="false"
        android:text="Give us a rating."
        android:textColor="@color/white"
        android:textSize="40dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="40dp"
        android:numStars="5"
        android:stepSize="1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/border"
        android:backgroundTint="#F9F6EE"
        android:clickable="true"
        android:fontFamily="@font/share_regular"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Submit"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/button_cancel_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/border"
        android:backgroundTint="#F9F6EE"
        android:clickable="true"
        android:fontFamily="@font/share_regular"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Cancel"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        app:cornerRadius="0dp" />

    <TextView
        android:id="@+id/average_rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Rating: "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="30dp"
        android:baselineAligned="false" />


    <ImageView
        android:id="@+id/lemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="630dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lemon_small" />

</LinearLayout>
