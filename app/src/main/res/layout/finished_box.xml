<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkBeige"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mint_small" />

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="75dp"
        android:baselineAligned="false"
        android:fontFamily="@font/share_regular"
        android:text="Your drink has been finished."
        android:textColor="@color/white"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/lemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="640dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lemon_small" />

</LinearLayout>
