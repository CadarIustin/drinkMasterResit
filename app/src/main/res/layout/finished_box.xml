<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="740dp"
    android:layout_height="470dp"
    android:layout_gravity="center"
    android:background="@color/darkBeige"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="80dp"
        android:baselineAligned="false"
        android:fontFamily="@font/share_regular"
        android:text="Your drink has been finished"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="92dp"
        android:layout_marginTop="-135dp"
        app:srcCompat="@drawable/mocktail" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="113dp"
        android:layout_height="105dp"
        android:layout_marginLeft="620dp"
        android:layout_marginTop="270dp"
        app:srcCompat="@drawable/lemon" />
</LinearLayout>