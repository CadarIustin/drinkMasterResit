<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="@color/darkBeige"
            android:fontFamily="@font/share_regular"
            android:paddingTop="15dp"
            android:shadowColor="@color/black"
            android:text="Drink Master"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/ginTonicText"
            android:layout_width="123dp"
            android:layout_height="82dp"
            android:layout_marginStart="550dp"
            android:layout_marginEnd="467dp"
            android:layout_marginBottom="159dp"
            android:fontFamily="@font/share_regular"
            android:shadowColor="@color/text_shadow_black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1"
            android:text="Gin n Tonic"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/recyclerViewText"
            android:layout_width="397dp"
            android:layout_height="295dp"
            android:layout_marginLeft="150dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/recyclerViewImage"
            android:layout_width="393dp"
            android:layout_height="315dp"
            android:layout_marginLeft="760dp"
            android:layout_marginTop="-300dp"
            app:srcCompat="@drawable/rum" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>