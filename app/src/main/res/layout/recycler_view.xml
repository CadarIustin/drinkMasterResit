<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ligthBeige"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="789dp">

            <TextView
                android:id="@+id/recyclerViewText"
                android:layout_width="552dp"
                android:layout_height="578dp"
                android:text="TextView" />
            <TextView
                android:id="@+id/ginTonicText"
                android:layout_width="552dp"
                android:layout_height="578dp"
                android:text="TextView" />

            <ImageView
                android:id="@+id/recyclerViewImage"
                android:layout_width="710dp"
                android:layout_height="605dp"
                android:layout_marginLeft="560dp"
                android:layout_marginTop="250dp"
                app:srcCompat="@drawable/rum" />

        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
