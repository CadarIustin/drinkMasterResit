<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkBeige"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mint_small" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:baselineAligned="false"
        android:text="Please confirm your drink"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#F9F6EE"
        android:clickable="true"
        android:fontFamily="@font/share_regular"
        android:text="No"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:cornerRadius="0dp" />

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-60dp"
        android:backgroundTint="#F9F6EE"
        android:clickable="true"
        android:fontFamily="@font/share_regular"
        android:text="Yes"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:cornerRadius="0dp" />

    <ImageView
        android:id="@+id/lemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="630dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lemon_small" />

</LinearLayout>
